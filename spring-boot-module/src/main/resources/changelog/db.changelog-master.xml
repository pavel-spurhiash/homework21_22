<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="pashasimonpure@gmail.com">
        <createTable tableName="item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints unique="true"/>
            </column>
            <column name="description" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="pashasimonpure@gmail.com">
        <createTable tableName="item_details">
            <column name="item_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="item_id" references="item(id)"/>
            </column>
            <column name="price" type="DECIMAL"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="pashasimonpure@gmail.com">
        <createTable tableName="shop">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints unique="true"/>
            </column>
            <column name="location" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="pashasimonpure@gmail.com">
        <createTable tableName="item_shop">
            <column name="item_id" type="BIGINT">
                <constraints nullable="false" primaryKey="false" foreignKeyName="fk_item_id" references="item(id)"/>
            </column>
            <column name="shop_id" type="BIGINT">
                <constraints nullable="false" primaryKey="false" foreignKeyName="fk_shop_id" references="shop(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>